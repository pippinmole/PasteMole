  script(src='../client.js')
  // ace.js libs
  script(src='../ace/ace.js' type='text/javascript' charset='utf-8')
  script.
    window.onload = function() {
      OnLoad();

      console.log(document.getElementById('startingCode').innerHTML);

      let startingCode = document.getElementById('startingCode').innerHTML;
      let startingCodeType = document.getElementById('startingCodeType').innerHTML;
      editor.setValue(startingCode);
      editor.session.setMode("ace/mode/" + startingCodeType);

      editor.setOptions({
        readOnly: true
      });
    }
